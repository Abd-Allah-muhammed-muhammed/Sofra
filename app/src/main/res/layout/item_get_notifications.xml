<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="@dimen/xxxxlarg">


    <RelativeLayout
        android:layout_margin="@dimen/smal"
        android:background="@drawable/back_notifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/notification_img"
            android:layout_width="@dimen/xxlarg"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/smal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="27dp"
            android:src="@drawable/ic_notifications_active_black_24dp" />

        <TextView

            android:layout_marginStart="@dimen/smal"
            android:layout_toLeftOf="@+id/notification_img"
            android:id="@+id/notification_Tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان التنبيه يظهر هنا"
            android:textColor="@color/green"
            android:fontFamily="sans-serif-thin"
            android:layout_marginTop="@dimen/smal"
            android:textSize="@dimen/text_size_xxnormal"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/notification_Tv_date"
           android:drawablePadding="2dp"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_marginBottom="@dimen/smal"
            android:text="السبت 1 يناير 2017"
            android:fontFamily="sans-serif-thin"
            android:layout_below="@+id/notification_Tv_address"
            android:layout_toLeftOf="@+id/notification_img"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/smal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notification_Tv_time"
            android:layout_marginStart="@dimen/larg"
            android:layout_marginTop="@dimen/smal"
            android:gravity="center"
            android:layout_below="@+id/notification_Tv_address"
            android:layout_toLeftOf="@+id/notification_Tv_date"
            android:text="6:30 مساءاٍٍ"
            android:fontFamily="sans-serif-thin"
            android:layout_marginBottom="@dimen/smal"
            android:drawableStart="@drawable/ic_watch_later_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>





</RelativeLayout>