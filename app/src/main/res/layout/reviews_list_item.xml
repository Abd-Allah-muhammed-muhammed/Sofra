<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/smal"
            android:layout_marginTop="@dimen/text_size_xnormal"
            android:layout_marginEnd="@dimen/smal"
            android:layout_marginBottom="@dimen/smal"
            android:text="@string/user_name"
            android:textSize="@dimen/text_size_xnormal" />

        <RatingBar
            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/smal"
            android:layout_marginTop="@dimen/text_size_xnormal"
            android:layout_marginEnd="@dimen/smal"
            android:rating="3"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/smal"
            android:layout_marginTop="@dimen/smal"
            android:layout_marginEnd="@dimen/smal"
            android:text="@string/date_text" />

        <TextView
            android:id="@+id/comments_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_text_view"
            android:layout_marginStart="@dimen/smal"
            android:layout_marginTop="@dimen/text_size_xnormal"
            android:layout_marginEnd="@dimen/smal"
            android:layout_marginBottom="@dimen/smal"
            android:text="@string/comments_text" />


    </RelativeLayout>

</android.support.v7.widget.CardView>