<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.login.LoginFragment">

<TextView
    android:drawablePadding="2dp"
    android:paddingEnd="100dp"
    android:textColor="@color/black"
    android:drawableEnd="@drawable/ic_person_outline_black_24dp"
    android:layout_marginTop="@dimen/larg"
    android:textSize="20sp"
    android:textStyle="bold"
    android:id="@+id/Login_text"
    android:gravity="center_vertical"
    android:text="@string/loginplease"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <EditText
        android:padding="@dimen/medum"
        android:id="@+id/Login_mail_et"
        style="@style/margin_items"
        android:paddingRight="@dimen/medum"
        android:hint="البريد الالكتروني "
        android:background="@drawable/back_login_items"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/xxlarg"
        android:layout_below="@+id/Login_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xxxlarg" />

    <EditText
        android:padding="@dimen/medum"
        android:id="@+id/Login_pass_et"
        style="@style/margin_items"
        android:paddingRight="@dimen/medum"
        android:hint="كلمة المرور "
        android:background="@drawable/back_login_items"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/xxlarg"
        android:layout_below="@+id/Login_mail_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xxxlarg" />

<Button
    android:textSize="@dimen/medum"
    android:text="تسجيل الدخول"
    android:textColor="@color/white"
    android:id="@+id/Login_btn"
    android:background="@color/green"
    android:layout_marginTop="@dimen/xxlarg"
    style="@style/margin_items"
    android:layout_below="@+id/Login_pass_et"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/Login_did_U_Forget_pass"
        android:textSize="@dimen/medum"
        android:layout_marginTop="@dimen/xxlarg"
        android:textColor="@color/blow"
        android:layout_below="@+id/Login_btn"
        android:text="نسيت كلمة المرور؟"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/_5xlarg"
        android:layout_height="2dp"
        android:background="@color/blow"
        android:layout_alignBottom="@+id/Login_did_U_Forget_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

<Button

    android:layout_marginTop="@dimen/xxlarg"
    android:textColor="@color/black"
    android:textSize="@dimen/medum"
    android:text="انشاء حساب جديد"
    style="@style/margin_items"
    android:background="@color/back_button"
    android:layout_below="@+id/Login_did_U_Forget_pass"
    android:id="@+id/Login_btn_new_acc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    
</RelativeLayout>